generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model UserProfile {
  id          String   @id @default(uuid())      // biar auto isi UUID
  supabaseId  String   @unique
  role        String   @default("user")
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt               // auto update tiap update
}

